<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:id="@+id/get_get"
    android:padding="5dp"
    android:background="@drawable/main_effect"
    android:layout_height="180dp">
<ImageButton
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/thomas"
    android:background="#fff"
    android:scaleType="fitXY"
    android:id="@+id/img_img"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Heading Of Item"
       android:textSize="18sp"
       android:background="#C36C6B6B"
       android:textColor="#fff"
       android:fontFamily="@font/robotoregular"
       android:textStyle="bold"
       android:gravity="center|left"
       android:paddingStart="10dp"
       android:id="@+id/heading_item"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Heading Of Item\nhnn mai description hu"
        android:textSize="12sp"
        android:gravity="center|left"
        android:fontFamily="@font/poppinslight"
        android:background="#C36C6B6B"
        android:textColor="#fff"
        android:paddingStart="10dp"
        android:id="@+id/description_item"/>
</LinearLayout>
</RelativeLayout>