<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/recyler2"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:baselineAligned="false"
    android:layout_height="130dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp"
        android:id="@+id/medicine_image_cart"
        android:src="@drawable/ic_groceries"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:baselineAligned="false"
        android:padding="0dp"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:baselineAligned="false">
     <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Crocin"
            android:fontFamily="@font/robotoregular"
            android:id="@+id/medicine_cart"
            android:textSize="16sp"
            android:textColor="#525151"
            android:textStyle="bold"
            android:gravity="center|left"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Price : "
                android:textSize="16sp"
                android:textColor="#525151"
                android:gravity="center|left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="₹ "
                android:id="@+id/change_price"
                android:textSize="16sp"
                android:textColor="#525151"
                android:gravity="center|left"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Qty : "
                android:fontFamily="@font/poppinslight"
                android:textSize="14sp"
                android:textColor="#525151"
                android:gravity="center|left"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:id="@+id/medicine_minus_cart"
                android:src="@drawable/ic_minus"
                android:background="@drawable/cart_effect"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:id="@+id/medicine_quantity_cart"
                android:textColor="#000"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:layout_marginLeft="0dp"
                android:id="@+id/medicine_add_cart"
                android:src="@drawable/ic_plus"
                android:background="@drawable/cart_effect"
                />
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/remove_cart"
                android:src="@drawable/ic_bin"
                android:background="@drawable/cart_effect"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="Net Payable : "
                android:fontFamily="@font/poppinslight"
                android:textSize="14sp"
                android:textColor="#525151"
                android:gravity="center|left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="₹ 100"
                android:textColor="#525151"
                android:id="@+id/rate_cart"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center|left"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                >
                <View
                    android:layout_width="60dp"
                    android:layout_height="1dip"
                    android:id="@+id/cart_line"
                    android:layout_centerInParent="true"
                    android:background="#000" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="₹ 100"
                    android:textSize="14sp"

                    android:id="@+id/rate_old_cart"
                    android:layout_centerInParent="true"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:textColor="#000"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    <TableRow android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#00656464"/>
</LinearLayout>