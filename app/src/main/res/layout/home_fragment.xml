<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="180dp"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="#fff">
    <Button
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:id="@+id/mov2_img"
        android:drawableStart="@drawable/back"
        android:src="@drawable/back"
        android:background="#02000000"/>

    <Button
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:id="@+id/mov1_img"
        android:layout_alignParentEnd="true"
        android:drawableEnd="@drawable/ic_right_arrow"
        android:src="@drawable/ic_right_arrow"
        android:tint="#fff"
        android:layout_marginRight="6dp"
        android:background="#00000000"/>
    <ViewFlipper
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ban_img"
    android:layout_marginLeft="0dp"
    android:src="@drawable/thomas"
    android:scaleType="fitXY"
    android:background="#fff"
    android:layout_marginRight="0dp"
    />
<ViewFlipper
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:id="@+id/ban_tit"
    android:text="We Are not taking \norders right now"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:textColor="#fff"
    android:background="#02FFFFFF"
    android:textSize="22sp"
    android:textStyle="bold"/>
</RelativeLayout>
</RelativeLayout>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:layout_width="wrap_content"
    android:layout_marginTop="5dp"
    android:id="@+id/swipe_base"
    android:layout_height="wrap_content">
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/base_recycler"/>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>